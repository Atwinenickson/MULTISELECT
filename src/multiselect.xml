<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.mendix.widget.custom.multiselect.Multiselect" needsEntityContext="true" offlineCapable="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Multiselect</name>
    <description>Select reference set items using a multi select dropdown</description>
    <icon/>
    <properties>
    <property key="entity1" isPath="yes" type="entity" pathType="referenceSet" allowNonPersistableEntities="true">
            <caption>Entity</caption>
            <category>Data source</category>
            <description>The reference set entity</description>
		</property>

		<property key="dataSourceType" type="enumeration" defaultValue="xpath">
			<caption>Data source type</caption>
			<category>Data source</category>
			<description>The method for retrieving the objects</description>
			<enumerationValues>
				<enumerationValue key="xpath">XPath</enumerationValue>
				<enumerationValue key="microflow">Microflow</enumerationValue>
			</enumerationValues>
		</property>

        <property key="displayAttr" type="attribute" entityProperty="entity1" isPath="optional" pathType="reference">
            <caption>Attribute</caption>
            <category>Data source</category>
            <description>The attribute to display</description>
			<attributeTypes>
                <attributeType name="Long" />
				<attributeType name="String" />
				<attributeType name="AutoNumber" />
				<attributeType name="Boolean" />
				<attributeType name="Currency" />
				<attributeType name="DateTime" />
				<attributeType name="Enum" />
				<attributeType name="Float" />
				<attributeType name="Integer" />
			</attributeTypes>
		</property>
        <property key="constraint" type="entityConstraint" entityProperty="entity1">
            <caption>XPath constraint</caption>
            <category>Data source</category>
            <description>The xpath constraint on the entity</description>
        </property>
		<!-- <property key="dataSourceMicroflow" type="microflow" required="false">
			<caption>Data source microflow</caption>
			<category>Data source</category>
			<description></description>
			<returnType type="Void" />
		</property> -->
		<property key="showLabel" type="boolean" defaultValue="true">
			<caption>Show Label</caption>
			<category>Display</category>
			<description>Show a label for the field</description>
		</property>
		<property key="labelCaption" type="translatableString" required="false" multiline="false">
			<caption>Label Caption</caption>
			<category>Display</category>
			<description>Specify the caption to use for the field</description>
            <translations>
                <translation lang="en_US">Label</translation>
                <translation lang="nl_NL">Label</translation>
            </translations>
		</property>

        <property key="Selectanylanguage" type="attribute" required="true">
            <caption>String</caption>
            <category>Strings</category>
            <description>Show selected</description>
            <attributeTypes>
				<attributeType name="AutoNumber" />
				<attributeType name="Boolean" />
				<attributeType name="Currency" />
				<attributeType name="DateTime" />
				<attributeType name="Enum" />
				<attributeType name="Float" />
				<attributeType name="Integer" />
				<attributeType name="Long" />
				<attributeType name="String" />
			</attributeTypes>
		</property>
         <property key="selectAllText" type="translatableString">
            <caption>Select All text</caption>
            <category>Strings</category>
            <description>The caption to display for the Select All checkbox</description>
            <translations>
                <translation lang="en_GB">Select All</translation>
                <translation lang="en_US">Select All</translation>
                <translation lang="nl_NL">Alles selecteren</translation>
            </translations>
        </property>
        <property key="noneSelectedText" type="translatableString">
            <caption>None Selected text</caption>
            <category>Strings</category>
            <description>The string to display when no option is selected</description>
            <translations>
                <translation lang="en_GB">None Selected</translation>
                <translation lang="en_US">None Selected</translation>
                <translation lang="nl_NL">Niets geselecteerd</translation>
            </translations>
        </property>
        <property key="allSelectedText" type="translatableString">
            <caption>All Selected text</caption>
            <category>Strings</category>
            <description>The string to display when all options are selected</description>
            <translations>
                <translation lang="en_GB">All Selected</translation>
                <translation lang="en_US">All Selected</translation>
                <translation lang="nl_NL">Alles geselecteerd</translation>
            </translations>
        </property>
        <property key="numberSelectedText" type="translatableString">
            <caption># Selected text</caption>
            <category>Strings</category>
            <description>The string to display when selected items exceeds the 'Items to display' property (Number will be prepended so ensure you leave a space!)</description>
            <translations>
                <translation lang="en_GB"> selected</translation>
                <translation lang="en_US"> selected</translation>
                <translation lang="nl_NL"> geselecteerd</translation>
            </translations>
        </property>

        <property key="onChangeMicroflow" type="microflow" required="false">
            <caption>On change</caption>
            <category>Events</category>
            <description>Run this microflow when an item is ticked or unticked</description>
            <returnType type="Void"/>
        </property>

	</properties>
</widget>
